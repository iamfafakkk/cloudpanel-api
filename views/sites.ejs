    <script>
        // Global variable to store the domain being deleted
        let domainToDelete = null;

        // Modal utility functions
        function showModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            
            // Force reflow to ensure the hidden class is removed before adding show class
            modal.offsetHeight;
            
            // Add show class for fade-in animation
            requestAnimationFrame(() => {
                modal.classList.add('modal-show');
            });
        }

        function hideModal(modalId) {
            const modal = document.getElementById(modalId);
            
            // Add hide class for fade-out animation
            modal.classList.add('modal-hide');
            modal.classList.remove('modal-show');
            
            // Remove modal from DOM after animation completes
            setTimeout(() => {
                modal.classList.add('hidden');
                modal.classList.remove('modal-hide');
                document.body.style.overflow = 'auto';
            }, 300); // Match the CSS transition duration
        }

        function showSuccessModal(message) {
            document.getElementById('successMessage').textContent = message;
            showModal('successModal');
        }

        function showErrorModal(message) {
            document.getElementById('errorMessage').textContent = message;
            showModal('errorModal');
        }

        // Helper function to format file size
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Filter sites based on search and filters
        function filterSites() {
            const searchTerm = document.getElementById('search-input').value.toLowerCase();
            const typeFilter = document.getElementById('type-filter').value;
            const frameworkFilter = document.getElementById('framework-filter').value;
            const sslFilter = document.getElementById('ssl-filter').value;
            const rows = document.querySelectorAll('.site-row');
            
            let visibleCount = 0;
            
            rows.forEach(row => {
                const domain = row.dataset.domain.toLowerCase();
                const type = row.dataset.type;
                const framework = row.dataset.framework;
                const ssl = row.dataset.ssl;
                
                const matchesSearch = domain.includes(searchTerm);
                const matchesType = !typeFilter || type === typeFilter;
                const matchesFramework = !frameworkFilter || framework === frameworkFilter;
                const matchesSSL = !sslFilter || ssl === sslFilter;
                
                if (matchesSearch && matchesType && matchesFramework && matchesSSL) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });
            
            // Update total count
            document.getElementById('total-sites').textContent = visibleCount;
        }

        // Refresh sites list
        function refreshSites() {
            window.location.reload();
        }

        // Show site details (placeholder)
        function showSiteDetails(domain) {
            showErrorModal(`Showing details for: ${domain}\n\nThis feature will open a detailed view of the site configuration and statistics.`);
        }

        // Manage site (placeholder)
        function manageSite(domain) {
            showErrorModal(`Managing site: ${domain}\n\nThis feature will open site management options like SSL configuration, database settings, etc.`);
        }

        // Delete site function
        function deleteSite(domain) {
            domainToDelete = domain;
            document.getElementById('modalDomainName').textContent = domain;
            showModal('deleteModal');
        }

        // Confirm delete function
        function confirmDeleteSite() {
            if (!domainToDelete) return;

            const domain = domainToDelete;
            const confirmBtn = document.getElementById('confirmDelete');
            const btnText = confirmBtn.querySelector('.delete-btn-text');
            const btnLoading = confirmBtn.querySelector('.delete-btn-loading');

            // Show loading state
            confirmBtn.disabled = true;
            btnText.textContent = 'Deleting...';
            btnLoading.classList.remove('hidden');

            // Make API call to delete the site
            fetch(`/sites/api/${domain}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ force: true })
            })
            .then(response => response.json())
            .then(data => {
                hideModal('deleteModal');
                
                if (data.success) {
                    // Show success message
                    showSuccessModal(`Site ${domain} has been deleted successfully!`);
                    
                    // Remove the row from the table/list with animation
                    const rows = document.querySelectorAll(`.site-row[data-domain="${domain}"]`);
                    rows.forEach(row => {
                        row.style.transition = 'opacity 0.3s ease';
                        row.style.opacity = '0';
                        setTimeout(() => row.remove(), 300);
                    });
                    
                    // Update the total count
                    setTimeout(() => {
                        const remainingRows = document.querySelectorAll('.site-row:not([style*="display: none"])').length;
                        document.getElementById('total-sites').textContent = remainingRows - 1;
                    }, 300);
                } else {
                    // Show error message
                    showErrorModal(`Failed to delete site ${domain}: ${data.message || data.error}`);
                }
            })
            .catch(error => {
                console.error('Error deleting site:', error);
                hideModal('deleteModal');
                showErrorModal(`Error deleting site ${domain}: ${error.message || 'Network error'}`);
            })
            .finally(() => {
                // Reset button state
                confirmBtn.disabled = false;
                btnText.textContent = 'Delete Site';
                btnLoading.classList.add('hidden');
                domainToDelete = null;
            });
        }

        // Event listeners for modal buttons
        document.addEventListener('DOMContentLoaded', function() {
            // Delete modal events
            document.getElementById('confirmDelete').addEventListener('click', confirmDeleteSite);
            document.getElementById('cancelDelete').addEventListener('click', () => {
                hideModal('deleteModal');
                domainToDelete = null;
            });

            // Success modal events
            document.getElementById('closeSuccess').addEventListener('click', () => {
                hideModal('successModal');
            });

            // Error modal events
            document.getElementById('closeError').addEventListener('click', () => {
                hideModal('errorModal');
            });

            // Close modals when clicking outside (on backdrop)
            document.querySelectorAll('.modal-backdrop').forEach(backdrop => {
                backdrop.addEventListener('click', function(e) {
                    if (e.target === this) {
                        const modal = this.closest('[id$="Modal"]');
                        if (modal) {
                            const modalId = modal.id;
                            hideModal(modalId);
                            if (modalId === 'deleteModal') {
                                domainToDelete = null;
                            }
                        }
                    }
                });
            });

            // Also handle clicks on the modal wrapper
            ['deleteModal', 'successModal', 'errorModal'].forEach(modalId => {
                const modal = document.getElementById(modalId);
                modal.addEventListener('click', function(e) {
                    // Only close if clicking on the outer modal wrapper, not the content
                    if (e.target === this) {
                        hideModal(modalId);
                        if (modalId === 'deleteModal') {
                            domainToDelete = null;
                        }
                    }
                });
            });

            // Close modals with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    hideModal('deleteModal');
                    hideModal('successModal');
                    hideModal('errorModal');
                    domainToDelete = null;
                }
            });
        });

        console.log('Site Lists page loaded successfully');
    </script>
</body>
